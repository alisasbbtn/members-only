<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_area :body, class: "form-control", rows: 10 %>
  </div>

  <div class="form-group text-right">
    <%= f.submit 'post', class: "btn btn-default" %>
  </div>
<% end %>
